<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="mt-3 col-md-3">
      <div class = "container">
      <div id="accordion">
        <div class="card">
          <h2 class="card-header" id="headingOne">
            <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
              aria-expanded="true" aria-controls="collapseOne">
              I'm Currently Reading
            </button>
          </h2>
          <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-bs-parent="#accordion">
            <div class="card-body">
              <ul>
                {{#each is_reading}}
                {{title}} {{year}} <button id="delete-button" class="btn btn-sm btn-danger"
                  data-id="{{this.book_id}}"><i class="bi bi-x-lg"></i></button> <button id = "move-button" class = "btn btn-sm btn-warning"><i class="bi bi-arrow-up-right"></i></button>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>

    <div class="mt-3 col-md-3">
      <div id="accordion">
        <div class="card">
          <h2 class="card-header" id="headingTwo">
            <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo"
              aria-expanded="false" aria-controls="collapseTwo">
              I Want To Read
            </button>
          </h2>
          <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-bs-parent="#accordion">
            <div class="card-body">
              {{#each will_read}}
              {{title}} "{{year}}" <button id="delete-button" class="btn btn-sm btn-danger"
                  data-id="{{this.book_id}}"><i class="bi bi-x-lg"></i></button>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="mt-3 col-md-3">
      <div class="accordion">
        <div class = "card">
           <h2 class="card-header" id="headingThree">
          <button class="btn" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            I've read
          </button>
        </h2>
        <div id="collapseThree" class="collapse" aria-labelledby="headingThree"
          data-bs-parent="#accordion">
          <div class="card-body">
            {{#each has_read}}
            {{title}} "{{year}}" <button id="delete-button" class="btn btn-sm btn-danger"
                  data-id="{{this.book_id}}"><i class="bi bi-x-lg"></i></button>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4 container">
  <div class = "col-md-6">
  <h3> Add A Book</h3>
  <form class="form new-book-form">
      <div class="form-group">
        <label for="book-title">Book Title:</label>
        <input class="form-input" type="text" id="book-title" name="book-name" />
      </div>
      <div class="form-group">
        <label for="book-author-first-name">Book Author Last Name:</label>
        <input class="form-input" type="text" id="book_author-first-name" name="book-author-first-name" />
      </div>
     <div class="form-group">
        <label for="book-author-last-name">Book Author Last Name:</label>
        <input class="form-input" type="text" id="book_author-last-name" name="book-author-last-name" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
</div>
</div>
